{
  "name": "ceres-framework",
  "version": "1.1.0",
  "description": "Node.js Framework for React Applications",
  "main": "src/index.js",
  "bin": {
    "ceres": "./cli/index.js"
  },
  "scripts": {
    "test": "npm run lint && ./node_modules/.bin/jest",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "./node_modules/.bin/eslint cli/ src/ config/",
    "lint:fix": "./node_modules/.bin/eslint --fix cli/ src/ config/",
    "watch:test": "./node_modules/.bin/jest --watch --coverage=false"
  },
  "author": "Isaac Suttell <isaac.suttell@sony.com>",
  "contributors": [
    "Isaac Suttell <isaac.suttell@sony.com>",
    "Sepand Assadi <sepand.assadi@sony.com>",
    "Jared Boone <jared.boone@sony.com>",
    "Chris Orescan <chris.orescan@sony.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ship-components/ceres-framework.git"
  },
  "engines": {
    "node": ">=6 <9"
  },
  "dependencies": {
    "async": "0.9.2",
    "base32": "0.0.6",
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "commander": "^2.18.0",
    "compression": "^1.7.3",
    "connect-redis": "^3.4.0",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-session": "^1.15.5",
    "hashids": "^1.2.2",
    "knex": "^0.15.2",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "multer": "^1.4.0",
    "redis": "^2.7.1",
    "response-time": "^2.3.2",
    "uuid": "^3.3.2",
    "winston": "^2.4.3",
    "youch": "^2.0.10"
  },
  "optionalDependencies": {
    "bookshelf": "^0.10.3",
    "express-socket.io-session": "^1.3.1",
    "mongodb": "^2.2.11",
    "pg": ">=7.3.0",
    "pg-live-select": ">=1.0.3",
    "react": "^15 || ^16",
    "react-dom": "^15 || ^16",
    "rethinkdb": ">=2.3.0",
    "socket.io": "^1.5.1",
    "sticky-session": "^1.1.2",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.10.2"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "coveralls": "^2.13.1",
    "eslint": "^4.3.0",
    "eslint-config-ship-components-base": "^1.1.0",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^21.2.1",
    "jest-junit": "^3.1.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "testResultsProcessor": "jest-junit",
    "testMatch": [
      "**/*_spec.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "jest-junit": {
    "suiteName": "ceres-framework Tests",
    "output": "./test-reports/junit.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
